doctype html
html(lang="en")
  head
    include partials/head
  body.login
    .contenedor-formulario 
      h1= nombrePagina 
      p Resetear contrase√±a

      if (locals.mensajes)
        .alertas
          each categoria in Object.keys(locals.mensajes)
            each error in mensajes[categoria]
              .alerta(class=`${categoria}`)
                p=error
                
      form.caja-login(method="POST") 
        .campo 
          label(for="password") Password 
          input(type="password" name="password" placeholder="Nuevo Password" value=password required )
        .campo.enviar
          input.boton(type="submit" value="Reestablecer password")
        .campo.acciones 
          a(href="/iniciar-sesion") Volver a login