extends layout

block contenido
  .contenido-principal
    h1 #{nombrePagina} - #{proyecto.nombre}

    form.agregar-tarea(action=`/proyectos/${proyecto.url}` method="POST")
      .campo
        label(for="tarea") Tarea:
        input.nombre-tarea(type="text" name="tarea" placeholder="Nombre Tarea")
      .campo.enviar 
        input.boton.nueva-tarea(type="submit" value="Agregar")

    // TODO - LISTADO DE PENDIENTES

    // ACCIONES
    .contenedor-acciones
      a.boton(href=`/proyectos/editar/${proyecto.id}`) Editar proyecto
      button#eliminar-proyecto.boton.eliminar(data-proyecto-url=proyecto.url type="button") Eliminar Proyecto
